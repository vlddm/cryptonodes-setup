[Unit]
Description=Bitcoin node service
After=network.target

[Service]
User=bitcoin
Group=bitcoin
Environment=HOME=/opt/bitcoin
ExecStart=/opt/bitcoin/bitcoin/bin/bitcoind
Restart=on-failure
TimeoutStopSec=10min

PrivateTmp=true
ProtectSystem=full
NoNewPrivileges=true
PrivateDevices=true
MemoryDenyWriteExecute=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
